<div class="banner">
  <div class="container text-light">
    <h1>Just like NEFLIX but better</h1>
    <p>Change your life. Make movie playlists.</p>
    <%= link_to 'Add a Playlist', new_list_path, class: "btn btn-danger" %>
  </div>
</div>
<div class="container">
  <h2 class="text-light p-4">Best Movies playlists</h2>
  <div class="conatianer d-flex gap-4">
    <% @lists.each do |list| %>
      <div class='position-relative'>
        <%= link_to list_path(list) do %>
          <% if list.movies.any? %>
            <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= list.movies[0].poster_url%>)">
              <%= list.name %>
            </div>
          <% else %>
            <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('no-movies')">
              <%= list.name %>
            </div>
          <% end %>
        <% end  %>
      </div>
    <% end %>
  </div>
</div>
